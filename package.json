{
  "name": "lazyreview",
  "version": "0.1.8",
  "description": "A TUI code review tool for GitHub PRs",
  "type": "module",
  "author": "Tauan Camargo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tauantcamargo/lazyreview.git"
  },
  "keywords": [
    "tui",
    "github",
    "pr",
    "code review",
    "lazyreview",
    "terminal"
  ],
  "bin": {
    "lazyreview": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "start": "node dist/cli.js",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --check 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@effect/platform": "^0.77.0",
    "@inkjs/ui": "^2.0.0",
    "@tanstack/react-query": "^5.66.0",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "date-fns": "^4.1.0",
    "effect": "^3.14.0",
    "ink": "^6.7.0",
    "ink-confirm-input": "^2.0.0",
    "ink-divider": "^4.1.1",
    "ink-select-input": "^6.2.0",
    "ink-scroll-list": "^0.4.1",
    "ink-scroll-view": "^0.3.5",
    "ink-syntax-highlight": "^2.0.2",
    "ink-tab": "^5.2.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.5.0",
    "react": "^19.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "yaml": "^2.7.0"
  },
  "engines": {
    "node": ">=20"
  }
}
