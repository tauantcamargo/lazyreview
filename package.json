{
  "name": "lazyreview",
  "version": "0.1.0",
  "description": "A TUI code review tool for GitHub PRs",
  "type": "module",
  "bin": {
    "lazyreview": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "start": "node dist/cli.js",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --check 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@effect/platform": "^0.77.0",
    "@inkjs/ui": "^2.0.0",
    "@tanstack/react-query": "^5.66.0",
    "date-fns": "^4.1.0",
    "effect": "^3.14.0",
    "react": "^18.3.1",
    "tuir": "^1.1.3",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/react": "^18.3.0",
    "@vitest/coverage-v8": "^3.0.0",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.5.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
